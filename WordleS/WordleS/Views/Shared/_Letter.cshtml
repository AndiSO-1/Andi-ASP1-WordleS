@{
    string[] checkedChars = @ViewData["CheckedChars"] as string[];
}

@switch (checkedChars[1])
{
    case "right":
        <text>
            <div class="box-letter letter bg-success d-flex text-white text-uppercase fs-3">
                <span class="m-auto">@checkedChars[0]</span>
            </div>
        </text>
        break;
    case "close":
        <text>
            <div class="box-letter letter bg-warning d-flex text-white text-uppercase fs-3">
                <span class="m-auto">@checkedChars[0]</span>
            </div>
        </text>
        break;
    default:
        <text>
            <div class="box-letter letter bg-secondary d-flex text-white text-uppercase fs-3">
                <span class="m-auto">@checkedChars[0]</span>
            </div>
        </text>
        break;
}